@model ActorViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-light w-75 border p-3 mx-auto my-5 rounded">
    <p class="border border-1 p-3 text-center h1 bg-white">Update Actor</p>

    <form asp-action="Update" method="post">

        <div class="form-group my-3">
            <input class="form-control" asp-for="Name" placeholder="Enter Actor Name">
        </div>

        <div class="form-group my-3">
            <textarea rows="7" class="form-control" asp-for="Biography" placeholder="Enter Actor Biography"></textarea>
        </div>

        <input type="submit" value="Update Actor" class="btn btn-info">

    </form>
</div>



