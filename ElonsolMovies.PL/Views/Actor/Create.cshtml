@model ActorViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-light w-75 border p-3 mx-auto my-5 rounded">
    <p class="border border-1 p-3 text-center h1 bg-white">Create New Actor</p>

    
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group my-3">
            <input class="form-control" asp-for="Name" placeholder="Enter Actor Name">
        </div>
        
        <div class="form-group my-3">
            <textarea rows="3" class="form-control" asp-for="Biography" placeholder="Enter Your Biography"></textarea>
        </div>
        <div class="form-group my-3">
            <input class="form-control" asp-for="Image" placeholder="Choose Actor Image">
        </div>
        
        <input type="submit" value="Create Actor" class="btn btn-primary">

    </form>
</div>

