@model UserRoleViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-light w-75 border p-3 mx-auto my-5 rounded">
    <p class="border border-1 p-3 text-center h1 bg-white">Update User</p>

    <form asp-action="Update" method="post">

        <div class="form-group my-3">
            <input class="form-control" asp-for="UserName" placeholder="Enter Your Name" >
        </div>
        <div class="form-group my-3">
            <input class="form-control" asp-for="Email" placeholder="Enter Your Email">
        </div>
        <div class="form-group my-3">
            <input class="form-control" asp-for="PhoneNumber" placeholder="Enter Your Phone Number">
        </div>

        <div class="form-group my-3">
            <p class="mt-4">Manage User Roles</p>
            <hr/>
            @for(int i=0; i<Model.Roles.Count ; i++)
            {
                <div>
                    <input asp-for="@Model.Roles[i].Name" hidden />
                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input pl-2 d-inline-block ml-0 position-static" />
                    <label asp-for="@Model.Roles[i]">@Model.Roles[i].Name</label>
                </div>
            }
        </div>

       
        

        <input type="submit" value="Update User" class="btn btn-info">

    </form>
</div>


@section CustomUserCSS {
    <link rel="stylesheet" type="text/css" href="~/css/user.css" />
}