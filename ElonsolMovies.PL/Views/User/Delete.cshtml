@model UserViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-light w-75 border p-3 mx-auto my-5 rounded">
    <p class="border border-1 p-3 text-center h1 bg-white">Delete User</p>
    
    <form asp-action="ConfirmDelete" method="post">
        
        <div class="form-group my-3">
            <input class="form-control" asp-for="Id" readonly>
        </div>
        <div class="form-group my-3">
            <input class="form-control" asp-for="UserName" readonly>
        </div>
        <div class="form-group my-3">
            <input class="form-control" asp-for="Email" readonly>
        </div>
        <div class="form-group my-3">
            <input class="form-control" asp-for="PhoneNumber" readonly>
        </div>
        
        <input type="submit" value="Delete User" class="btn btn-danger">

    </form>
</div>
