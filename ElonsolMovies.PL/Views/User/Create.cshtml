@model UserViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-light w-75 border p-3 mx-auto my-5 rounded">
    <p class="border border-1 p-3 text-center h1 bg-white">Create New User</p>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group my-3">
            <input class="form-control" asp-for="UserName" placeholder="Enter Your Name">
        </div>
        <div class="form-group my-3">
            <input class="form-control" asp-for="Email" placeholder="Enter Your Email">
        </div>
        <div class="form-group my-3">
            <input class="form-control" asp-for="Password" placeholder="Enter Your Password">
        </div>
        <div class="form-group my-3">
            <input class="form-control" asp-for="PhoneNumber" placeholder="Enter Your Phone Number">
        </div>
        
        <input type="submit" value="Create User" class="btn btn-primary">

    </form>
</div>


