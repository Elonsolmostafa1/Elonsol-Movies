@model RoleViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="bg-light w-75 border p-3 mx-auto my-5 rounded">
    <p class="border border-1 p-3 text-center h1 bg-white">Update Role</p>

    <form asp-action="Update" method="post">

        <div class="form-group my-3">
            <input class="form-control" asp-for="Id" hidden>
        </div>
        <div class="form-group my-3">
            <input class="form-control" asp-for="Name" placeholder="Enter Role Name">
        </div>
        <input type="submit" value="Save" class="btn btn-info"> | <a asp-controller="Role" asp-action="Index" class="text-decoration-none text-secondary">Back to role list</a>

    </form>
</div>
